{
  "name": "instafriend_backend",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "type": "module",
  "main": "app.js",
  "scripts": {
    "local": "NODE_ENV=local nodemon -r tsconfig-paths/register --exec node --import tsx src/app.ts",
    "local:debug": "NODE_ENV=local nodemon -r tsconfig-paths/register --exec node --import tsx --inspect src/app.ts",
    "dev": "NODE_ENV=development nodemon -r tsconfig-paths/register --exec node --import tsx src/app.ts",
    "dev:debug": "NODE_ENV=development nodemon -r tsconfig-paths/register --exec node --import tsx --inspect src/app.ts",
    "build": "tsc --build tsconfig.build.json",
    "prod": "NODE_ENV=production node --import tsx build/app.js",
    "prod:debug": "NODE_ENV=production node --import tsx --inspect build/app.js",
    "clean": "rimraf build logs",
    "prebuild": "npm run lint",
    "lint": "eslint 'src/**/*.ts' --fix",
    "lint:check": "eslint 'src/**/*.ts' --max-warnings=0",
    "lint:staged": "lint-staged",
    "prettier": "prettier --write 'src/**/*.ts'",
    "prettier:check": "prettier --check 'src/**/*.ts'",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "Abhishek Kolge",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@tsconfig/node18": "^18.2.4",
    "@types/compression": "^1.7.5",
    "@types/cookie-session": "^2.0.49",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/hpp": "^0.2.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.4",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.8.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.1",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@socket.io/redis-adapter": "^8.3.0",
    "compression": "^1.8.0",
    "cookie-session": "^2.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "http-status-codes": "^2.3.0",
    "mongoose": "^8.10.1",
    "morgan": "^1.10.0",
    "redis": "^4.7.0",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.test.ts": [
      "eslint --fix",
      "prettier --write",
      "jest --bail --findRelatedTests --maxWorkers=2"
    ]
  }
}
